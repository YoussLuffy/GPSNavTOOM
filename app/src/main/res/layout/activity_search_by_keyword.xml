<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_by_keyword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.toutoum.helb.gps.SearchByKeyword"
    android:background="@drawable/parchemin2">

    <Button
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="31dp"
        android:id="@+id/butMenu"
        android:background="@drawable/potatos"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:onClick="intentBack"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/textViewKeyword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/textViewKeyword"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text=""
        android:id="@+id/butSearch"
        android:background="@drawable/start"
        android:layout_marginBottom="49dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="intentMap"
        android:layout_above="@+id/butMenu"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Saisir mot"
        android:ems="10"
        android:layout_marginTop="29dp"
        android:id="@+id/editTextKeyword"
        android:layout_below="@+id/textViewKeyword"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
