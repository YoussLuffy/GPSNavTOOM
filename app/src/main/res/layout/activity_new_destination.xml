<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_destination"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be.toutoum.helb.gps.NewDestination"
    android:background="@drawable/parchemin2">

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="32dp"
        android:onClick="intentMenu"
        android:id="@+id/butMenu"
        android:background="@drawable/potatos" />

    <Button
        android:text="@string/butQRCode"
        android:id="@+id/butQRCode"
        android:background="@drawable/parchemin1"
        android:layout_height="30dp"
        android:layout_width="200dp"
        android:layout_marginTop="94dp"
        android:onClick="QRCode"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/butAddress"
        android:id="@+id/butAddress"
        android:background="@drawable/parchemin1"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:onClick="intentAddress"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/butQRCode"
        android:layout_alignStart="@+id/butQRCode" />
</RelativeLayout>
